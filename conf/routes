# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Add computer
GET     /ping              controllers.Application.ping
GET     /fake/:id              controllers.Application.fake(id: Long)



# Display a user.
# {username: vl, password }
POST   /users/new                       controllers.UsersController.create

GET  /users/:username/matching          controllers.UsersController.matching(username: String)

# {a:string, b:string, location:string,  }
#PUT   /users/:username/matching        controllers.UsersController.update(username: String) 




#GET   /users/:id          controllers.UsersController.show(id: Long)  